<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Página del portal -->
    <template id="portal_my_subscriptions" name="Mis Suscripciones">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Mis Suscripciones</t>
            </t>
            
            <div class="container mt-3">
                <div class="row">
                    <div class="col-12">
                        <h3>Suscripciones Activas</h3>
                        <t t-if="active_subscriptions">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Días Restantes</th>
                                        <th>Progreso</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="active_subscriptions" t-as="sub">
                                        <tr>
                                            <td><t t-esc="sub.product_id.name"/></td>
                                            <td><t t-esc="sub.start_date"/></td>
                                            <td><t t-esc="sub.end_date"/></td>
                                            <td>
                                                <span t-attf-class="badge badge-#{sub.days_remaining > 7 and 'success' or sub.days_remaining > 3 and 'warning' or 'danger'}">
                                                    <t t-esc="sub.days_remaining"/> días
                                                </span>
                                            </td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" t-attf-style="width: #{sub.progress}%" t-attf-aria-valuenow="#{sub.progress}" aria-valuemin="0" aria-valuemax="100">
                                                        <t t-esc="round(sub.progress, 1)"/>%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p class="text-muted">No tienes suscripciones activas.</p>
                        </t>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12">
                        <h3>Historial de Suscripciones</h3>
                        <t t-if="expired_subscriptions">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="expired_subscriptions" t-as="sub">
                                        <tr class="text-muted">
                                            <td><t t-esc="sub.product_id.name"/></td>
                                            <td><t t-esc="sub.start_date"/></td>
                                            <td><t t-esc="sub.end_date"/></td>
                                            <td><span class="badge badge-secondary">Expirada</span></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p class="text-muted">No tienes suscripciones expiradas.</p>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>